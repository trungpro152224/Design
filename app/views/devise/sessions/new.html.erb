<body id="particles-js">
  <%= javascript_include_tag "particles.js" %>
  <%= javascript_include_tag "app.js" %>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <div class="card">
          <h5 class="card-header info-color white-text text-center py-4">
            <strong style="color: #fff;"> SIGN IN </strong>
            <p style="text-align: center; opacity: 0.4; font-family: cursive;"> Welcome to design </p>
            <%= link_to '#homepage', root_path, class: 'btn btn-outline-dark' %>
          </h5>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="card-body px-lg-5 pt-0">
            <form class="text-center" style="color: #757575;">

              <div class="form-group">
                <label for="Username" class="bmd-label-floating">Username</label>
                <%= f.input :username, label: false, required: true, autocomplete: "username", input_html: { class: "form-control" } %>
                <span class="bmd-help">We'll never share your username with anyone else.</span>
              </div>

              <div class="form-group">
                <label for="Password" class="bmd-label-floating">Password</label>
                <%= f.input :password, label: false, required: true, input_html: { autocomplete: "current-password", class: "form-control" } %>
                <span class="bmd-help">We'll never share your password with anyone else.</span>
              </div>
              <!-- show flash -->
                <% flash.each do |key, value| %>
                  <% if key == "alert" %>
                    <%= content_tag :div, value, class: "alert alert-danger", style: "text-align: center;" %>
                  <% end %>
                <% end %>

              <div class="d-flex justify-content-around">
                <div class="boolean input optional checkbox" id="user_remember_me_input">
                  <input name="user[remember_me]" type="hidden" value="0" />
                  <label class=" control-label" for="user_remember_me">
                    <input id="user_remember_me" name="user[remember_me]" type="checkbox" value="1" /> Remember me
                  </label>
                </div>
              </div>
              <div class="col-md-4 offset-md-4">
                <%= f.button :submit, "Log in", class: "btn btn-raised btn-info btn-rounded btn-block my-4 waves-effect z-depth-0" %>
              </div>
            </form>
          </div>
          <% end %>
          <div style="text-align: center;">
            <%= render "devise/shared/links" %>
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>