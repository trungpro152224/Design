<body id="particles-js">
  <%= javascript_include_tag "particles.js" %>
  <%= javascript_include_tag "app.js" %>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <div class="card">
          <h5 class="card-header info-color white-text text-center py-4">
            <strong style="color: #fff;"> FORGOT YOUR PASSWORD?</strong>
          </h5>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="card-body px-lg-5 pt-0">
            <form class="text-center" style="color: #757575;">

              <div class="form-group">
                <label for="Email" class="bmd-label-floating">Email</label>
                <%= f.input :email, label: false, required: true, autocomplete: "email", input_html: { class: "form-control" } %>
                <span class="bmd-help">We'll never share your username with anyone else.</span>
              </div>

              <div class="col-md-10 offset-md-1">
                <%= f.button :submit, "Send me reset password instructions", class: "btn btn-raised btn-info btn-rounded btn-block my-4 waves-effect z-depth-0" %>
              </div>
            </form>
          </div>
          <% end %>
          <div style="text-align: center;">
            <%= render "devise/shared/links" %>
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>