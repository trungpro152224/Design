<body id="particles-js">
  <%= javascript_include_tag "particles.js" %>
  <%= javascript_include_tag "app.js" %>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <div class="card">
          <h5 class="card-header info-color white-text text-center py-4">
            <strong style="color: #fff;"> CHANGE YOUR PASSWORD? </strong>
          </h5>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="card-body px-lg-5 pt-0">
              <form class="text-center" style="color: #757575;">
                <% if f.error_notification.present? %>
                  <br><%= content_tag :div, f.error_notification , class: "alert alert-danger", style: "text-align: center;" %>
                <% end %>
                <div class="form-group">
                  <label for="Password" class="bmd-label-floating">New Password</label>
                  <%= f.input :password, label: false, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password", class: "form-control" } %>
                  <span class="bmd-help">We'll never share your password with anyone else.</span>
                </div>

                <div class="form-group">
                  <label for="Password" class="bmd-label-floating">Confirm your new password</label>
                  <%= f.input :password_confirmation, label: false, required: true,  input_html: { autocomplete: "new-password", class: "form-control" } %>
                  <span class="bmd-help">We'll never share your password with anyone else.</span>
                </div>

                <div class="col-md-4 offset-md-4">
                  <%= f.button :submit, "Change my password", class: "btn btn-raised btn-info btn-rounded btn-block my-4 waves-effect z-depth-0" %>
                </div>
              </form>
            </div>
          <% end %>
          <div style="text-align: center;">
            <%= render "devise/shared/links" %>
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>