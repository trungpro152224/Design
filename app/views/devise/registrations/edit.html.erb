<body id="particles-js">
  <%= javascript_include_tag "particles.js" %>
  <%= javascript_include_tag "app.js" %>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <div class="card">
          <h5 class="card-header info-color white-text text-center py-4">
            <strong style="color: #fff;"> EDIT <%= resource_name.to_s.humanize %> </strong>
          </h5>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="card-body px-lg-5 pt-0">
            <form class="text-center" style="color: #757575;">

              <div class="form-group">
                <label for="Username" class="bmd-label-floating">Username</label>
                <%= f.input :username, label: false, required: true, autocomplete: "username", input_html: { class: "form-control" } %>
                <span class="bmd-help">We'll never share your username with anyone else.</span>
              </div>

              <div class="form-group">
                <label for="Email" class="bmd-label-floating">Email</label>
                <%= f.input :email, label: false, required: true, autocomplete: "email", input_html: { class: "form-control" } %>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>
                <span class="bmd-help">We'll never share your username with anyone else.</span>
              </div>

              <div class="form-group">
                <label for="Password" class="bmd-label-floating">Password</label>
                <%= f.input :password, label: false, required: true, hint: "leave it blank if you don't want to change it", input_html: { autocomplete: "new-password", class: "form-control" } %>
                <span class="bmd-help">We'll never share your password with anyone else.</span>
              </div>

              <div class="form-group">
                <label for="Password" class="bmd-label-floating">Confirm Password</label>
                <%= f.input :password_confirmation, label: false, required: true,  input_html: { autocomplete: "new-password", class: "form-control" } %>
                <span class="bmd-help">We'll never share your password with anyone else.</span>
              </div>

              <div class="form-group">
                <label for="Password" class="bmd-label-floating">Current Password</label>
                <%= f.input :current_password, label: false, required: true, hint: "we need your current password to confirm your changes", input_html: { autocomplete: "current-password", class: "form-control" } %>
                <span class="bmd-help">We'll never share your password with anyone else.</span>
              </div>
              <br>

              <div class="col-md-4 offset-md-4">
                <%= f.button :submit, "Update", class: "btn btn-raised btn-info btn-rounded btn-block my-4 waves-effect z-depth-0" %>
              </div>
            </form>
          </div>
          <% end %>
          <div style="text-align: center;">
            <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
            <%= render "devise/shared/links" %>
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>